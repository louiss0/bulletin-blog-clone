---
import Container from "@/components/Container.astro";
import MainLayout from "@/components/MainLayout.astro";
import PostCard from "@/components/PostCard.astro";
import SubscriptionForm from "@/components/SubscriptionForm.astro";
import TransitionWrapper from "@/components/TransitionWrapper.astro";
import PostService from "@/services/PostService";
const posts = await new PostService().getLatestPosts();
import flowerImage from "@/images/612bc9fdfe52e1fbcc5602c0_photo-1533090161767-e6ffed986c88.jpeg";
import DeskGuyWithTestimonialOnTheRight from "@/components/DeskGuyWithTestimonialOnTheRight.astro";
import RandomSellingPoints from "@/components/RandomSellingPoints.astro";
const latestThreePosts = posts.slice(0, 3);
const customers = [
  {
    avatar: "/src/images/612bcb9ec64ea4d1a38171af_avatar-1.jpg",
    name: "Pam Beasley",
  },
  {
    avatar: "/src/images/612bcba8d9c353c79b4d07fa_avatar-2.jpg",
    name: "JIM HALPERT",
  },
  {
    avatar: "/src/images/612bcbb0df969cde48cec580_avatar-3.jpg",
    name: "Kevin Malone",
  },
  {
    avatar: "/src/images/612bcbb66f6663145f39146e_avatar-4.jpg",
    name: "Erin Hannon",
  },
];
---

<MainLayout title="Landing Page One">
  <Fragment slot="header">
    <div class="grid gap-6">
      <div class="grid place-items-center gap-8">
        <h1>Landing Page</h1>
        <p class="text-xl">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum et
          lacus varius, dapibus leo eget, semper metus. Suspendisse egestas est
          mi.
        </p>
      </div>
      <div class="bg-violet-600 lg:rounded-lg lg:w-3/5 lg:mx-auto">
        <SubscriptionForm
          title="Get our weekly email"
          content="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum et lacus varius, dapibus leo eget."
          buttonText="Sign Up"
        />
      </div>
    </div>
  </Fragment>

  <Fragment slot="main">
    <section class="bg-gray-100 px-4 py-6" aria-labelledby="recent-posts">
      <TransitionWrapper>
        <Container>
          <div class="grid place-items-center gap-8">
            <div class="grid place-items-center gap-4">
              <h2>Recent Articles</h2>
              <p class="text-center">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Vestibulum et lacus varius, dapibus leo eget, semper metus.
                Suspendisse egestas est mi.
              </p>
            </div>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
              {
                latestThreePosts.length !== 0 &&
                  latestThreePosts.map((latestPost) => (
                    <PostCard
                      class={"rounded-lg"}
                      title={latestPost.title}
                      author={latestPost.author}
                      image={latestPost.image}
                      pubDate={latestPost.pubDate}
                      thumbnail={latestPost.thumbnail}
                      tag={latestPost.tag}
                    />
                  ))
              }
            </div>
          </div>
        </Container>
      </TransitionWrapper>
    </section>

    <section class="px-4 py-16" aria-labelledby="selling-points">
      <TransitionWrapper>
        <Container>
          <div class="grid place-items-center gap-12">
            <h2 id="selling-points">A section here with some selling points</h2>
            <p>
              The rich text element allows you to create and format headings,
              paragraphs, blockquotes, images, and video all in one place
              instead of having to add and format them individually. Just
              double-click and easily create content.
            </p>
            <div class="lg:h-96 w-3/5">
              <img src={flowerImage} alt="Flower Image" />
            </div>
            <div>
              <div class="grid gap-2">
                <h3>Static and dynamic content editing</h3>
                <p>
                  A rich text element can be used with static or dynamic
                  content. For static content, just drop it into any page and
                  begin editing. For dynamic content, add a rich text field to
                  any collection and then connect a rich text element to that
                  field in the settings panel. Voila!
                </p>
              </div>
              <div class="grid gap-2">
                <h3>How to customize formatting for each rich text</h3>
                <p>
                  Headings, paragraphs, blockquotes, figures, images, and figure
                  captions can all be styled after a class is added to the rich
                  text element using the "When inside of" nested selector
                  system.
                </p>
              </div>
            </div>
          </div>
        </Container>
      </TransitionWrapper>
    </section>

    <section aria-labelledby="sign-up-form">
      <TransitionWrapper>
        <div class="bg-violet-600">
          <SubscriptionForm
            title="Sign up for the list"
            content="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum et lacus varius, dapibus leo eget."
            buttonText="Sign Up"
          />
        </div>
      </TransitionWrapper>
    </section>

    <section class="px-4 py-16" aria-labelledby="selling-points--2">
      <TransitionWrapper>
        <RandomSellingPoints headingId={"selling-points--2"} />
      </TransitionWrapper>
    </section>
    <section class="px-4 py-16" aria-labelledby="customers">
      <TransitionWrapper>
        <Container>
          <h2 class="sr-only" id="customers">Customers</h2>
          <div class="grid gap-4 lg:grid-cols-2 lg:gap-y-6">
            {
              customers.map(({ avatar, name }) => (
                <div class="grid gap-2">
                  <p class="leading-relaxed text-base lg:text-left  font-medium">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    <br class="hidden lg:block" />
                    Vestibulum et lacus varius, dapibus leo eget, semper metus.
                    <br class="hidden lg:block" />
                    Suspendisse egestas est mi.
                  </p>
                  <div class="justify-self-start">
                    <div class="flex gap-2 items-center">
                      <div class="w-12">
                        <img src={avatar} alt={name} class="rounded-full" />
                      </div>
                      <div class="uppercase text-sm text-gray-300">{name}</div>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </Container>
      </TransitionWrapper>
    </section>
    <section class="px-4 py-16" aria-labelledby="selling-points--3">
      <TransitionWrapper>
        <RandomSellingPoints headingId={"selling-points--3"} />
      </TransitionWrapper>
    </section>
    <section class="px-4 py-16">
      <DeskGuyWithTestimonialOnTheRight />
    </section>
  </Fragment>
</MainLayout>
