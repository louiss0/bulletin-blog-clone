---
import Button from "@/components/Button.vue";
import Container from "@/components/Container.astro";
import MainLayout from "@/components/MainLayout.astro";
---

<MainLayout title="Contact">
  <Fragment slot="header">
    <div class="bg-gray-200 px-6 py-20">
      <Container>
        <div class="grid gap-20 place-items-center">
          <div class="grid gap-4 text-center">
            <h1>Get in touch!</h1>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit.
              Vestibulum et lacus varius, dapibus leo eget, semper metus.
              Suspendisse egestas est mi.
            </p>
          </div>
          <form action="" class="text-base w-3/5">
            <div class="grid gap-6">
              <div class="grid gap-3">
                <label for="name">Name</label>
                <div class="border border-gray-400 border-solid rounded-md">
                  <input type="text" id="name" name="name" class="" />
                </div>
              </div>
              <div class="grid gap-3">
                <label for="email">Email</label>
                <div class="border border-gray-400 border-solid rounded-md">
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="py-4 px-8 caret-gray-400 rounded-md"
                  />
                </div>
              </div>
              <div class="grid gap-6">
                <label for="message">Message</label>
                <div class="border border-gray-400 border-solid rounded-md">
                  <textarea
                    name="message"
                    id="message"
                    class="h-full"
                    cols="30"
                    rows="10"
                    >How can we help?
                  </textarea>
                </div>
                <div class="justify-self-start">
                  <Button
                    client:idle
                    size="sm"
                    class:list={[
                      "rounded-lg text-gray-50 bg-violet-600",
                      "focus:outline-none focus:ring-2 focus:ring-gray-600",
                    ]}
                  >
                    Submit
                  </Button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </Container>
    </div>
  </Fragment>
</MainLayout>

<style lang="postcss">
  input,
  textarea {
    @apply py-4 px-8 caret-gray-400 rounded-md;
    @apply placeholder-gray-200 w-full;

    @apply focus:outline-none focus:ring-2 focus:ring-gray-600;
  }
</style>
