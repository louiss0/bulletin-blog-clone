---
import BaseLayout from "./BaseLayout.astro";

import Navbar from "@/components/Navbar.vue";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <Navbar client:idle />
  <div class="dark:text-gray-50 dark:bg-gray-900">
    <div
      class="grid grid-rows-[repeat(2,_minmax(40vh,_min-content))_10vh] min-h-screen"
    >
      <header>
        <slot name="header" />
      </header>
      <main>
        <slot name="main" />
      </main>
      <footer>
        <slot name="footer" />
      </footer>
    </div>
  </div>
</BaseLayout>
